        <% for(var i=0; i < item.rating; i++){ %>
          &starf;
          <% }; %>
        </b></p>
        <br>
        <p><%= item.description %></p>
      </div>
      <div>
        <% if(flags == 0 && userflag == 0){ %>
          <a class="button" href="/swap/<%=item.itemCode%>"><img class="swap" alt="" src="../resources/image/swap.jpg"> &nbsp;  Swap it </a>
          <% }%>
          <% if(flags != -1 && userflag == 1){ %>
            <a class="button" href="/rate/<%= item.itemCode%>"> &star; Rate it</a>
            <%}%>
            <% if(flags == 1){ %>
              <br>
              <p><b>You have already swapped this item.</b></p>
              <a class="button" href="/rate/<%= item.itemCode%>"> &star; Rate it</a>
              <% }%>
              <% if(flags == 2){ %>
                <p><b>You have a swap offer for this item.<br></b></p>
                <a class="button" href="/mySwaps"> See the Offer</a>
                <% }%>
